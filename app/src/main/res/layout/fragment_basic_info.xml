<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 이미지 업로드 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="@drawable/rounded_input_background">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="간판, 명함 , 장소명 등 위치를 확인할 수 있는 사진을 첨부해 주세요."
            android:textColor="@color/gray" />
    </LinearLayout>

    <Button
        android:id="@+id/uploadImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_border_green"
        android:text="이미지 업로드"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <!-- 입력 필드 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소명"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="장소명 입력"
        android:background="@drawable/rounded_input_background"
        android:padding="8dp"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업종"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="업종 입력"
        android:background="@drawable/rounded_input_background"
        android:padding="8dp"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black" />

    <!-- 입력 필드 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="상세 위치 입력 (예 : 동, 층, 호)"
        android:background="@drawable/rounded_input_background"
        android:padding="8dp"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="입력하신 정보는 장소 정보로 등록되어 업체정보로 활용됩니다.\n개인정보보호를 위해 휴대전화번호 등의 개인정보는 정책상 반려될 수 있습니다."
        android:textColor="@color/gray"
        android:textSize="12sp" />
</LinearLayout>
